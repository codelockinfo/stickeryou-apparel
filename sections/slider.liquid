{% for block in section.blocks %}
<div class="slider" style="background: url('{{ block.settings.image | img_url: 'master' }}')no-repeat center; background-size: cover;">	
	<div class="slide active">
		<h2 class="sliderimgHeading">{{ block.settings.imgheading }}</h2>
  	</div>
</div>
{% endfor %}

{% schema %}
  {
    "name": "Insta click Slider",
    "max_blocks": 5,
    "blocks": [
      {
        "type": "slide",
        "name": "Slide",
        "settings": [
		  {
			"id": "imgheading",
			"type": "text",
			"label": "Add Image Heading"
		  },
          {
            "id": "image",
            "type": "image_picker",
            "label": "Image"
          }
        ]
      }
  ],
  "presets": [
	{
	  "name": "Insta click Slider",
	  "category": "Slider"
	}
  ]
  }
{% endschema %}

<style>
body
@import url(https://fonts.googleapis.com/css?family=Lato:300|Kalam:700);

@prim: #F79E7F;
@sec: #53E3A6;
@third: #50A3A2;

*{
	box-sizing: border-box;
	padding: 0;
	margin: 0;
}

body{
	background-color: rgb(230, 233, 236);
	font-family: 'Lato', sans-serif;
	font-weight: 300;
}

  .sliderimgHeading{
    color: red;
  	position: absolute;
  	top: 50%;
  	left: 50%;
  	transform: translate(-50%, -50%);
  }
  
h1,
h2,
h3,
h4,
h5,
h6{
	font-weight: 700;
	font-family: 'Kalam', cursive;
}

.slider{
/* 	position: fixed; */
	top: 50%;
	left: 50%;
	
	width: 700px;
	height: 300px;
	
	margin-left: -350px;
	margin-top: -150px;
	
	overflow: hidden;
	border-radius: 7px;
	background-color: black;
	
	.slide{
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		color: white;
		padding: 40px;
		
		text-align: center;
		font-size: 20px;
		
		transition-duration: 0.5s;
		opacity: 0;
		
		cursor: pointer;
		
		h2{
			margin-bottom: 10px;
			margin-top: 60px;
		}
		
		&.active{
			opacity: 1;
		}
		
		&:nth-child(1){
			background-color: @prim;
		}
		
		&:nth-child(2){
			background-color: @sec;
		}
		
		&:nth-child(3){
			background-color: @third;
		}
	}
}
</style>


<script src="https://code.jquery.com/jquery-3.6.0.js"></script>
<script>
$(document).ready(function(){
	$('.slider').on('click', function(){
		if ( $('.active').next('.slide').length ){
			$('.active').removeClass('active').next('.slide').addClass('active');
		} else {
			$('.active').removeClass('active');
			$('.slide').first().addClass('active');
        }
	});
});


</script>